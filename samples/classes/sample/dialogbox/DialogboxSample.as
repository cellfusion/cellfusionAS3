package  sample.dialogbox{	import jp.cellfusion.abstractUI.AbstractUI;	import jp.cellfusion.abstractUI.dialogbox.IDiarogbox;	import jp.cellfusion.abstractUI.dialogbox.SimpleDialogbox;	import jp.cellfusion.abstractUI.events.DialogboxEvent;		import flash.display.Sprite;	import flash.events.MouseEvent;		/**	 * @author Mk-10:cellfusion	 */	public class DialogboxSample extends Sprite 	{		private var _dialogbox:IDiarogbox;		public var button:Sprite;				public function DialogboxSample()		{			AbstractUI.initialize(this);						_dialogbox = new SimpleDialogbox(new SimpleDialogView());			_dialogbox.addEventListener(DialogboxEvent.CLOSE_BUTTON_CLICK, dialogCloseClickHandler);						button.mouseChildren = false;			button.buttonMode = true;			button.addEventListener(MouseEvent.CLICK, clickHandler);		}				private function dialogCloseClickHandler(event:DialogboxEvent):void		{			_dialogbox.hide();		}		private function clickHandler(event:MouseEvent):void		{			_dialogbox.show();		}	}}