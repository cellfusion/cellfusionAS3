package jp.cellfusion.ui.combobox {	import jp.cellfusion.ui.list.IList;	import flash.display.DisplayObjectContainer;	import flash.events.EventDispatcher;	/**	 * @author Mk-10:cellfusion	 */	public class SimpleCombobox extends EventDispatcher implements ICombobox 	{		private var _view:DisplayObjectContainer;		private var _list:IList;		public function SimpleCombobox(view:DisplayObjectContainer, list:IList)		{			_view = view;			_list = list;		}		public function close():void		{		}		public function open():void		{		}		public function addItem(item:*):*		{			return _list.addItem(item);		}		public function addItemAt(item:*, index:uint):*		{			return _list.addItemAt(item, index);		}		public function getItemAt(index:uint):*		{			return _list.getItemAt(index);		}		public function removeAll():void		{			_list.removeAll();		}		public function removeItem(item:*):*		{			return _list.removeItem(item);		}		public function removeItemAt(index:uint):*		{			return _list.removeItemAt(index);		}		public function replaceItemAt(item:*, index:uint):*		{			return _list.replaceItemAt(item, index);		}		public function get dropdown():IList		{			return _list;		}		public function get length():uint		{			return _list.length;		}		public function get rowCount():uint		{			return _list.rowCount;		}		public function set rowCount(value:uint):void		{			_list.rowCount = value;		}		public function get selectedIndex():int		{			return _list.selectedIndex;		}		public function set selectedIndex(value:int):void		{			_list.selectedIndex = value;		}		public function get selectedItem():*		{			return _list.selectedItem;		}		public function set selectedItem(value:*):void		{			_list.selectedItem = value;		}	}}