package jp.cellfusion.ui.video.ui{	import jp.cellfusion.ui.events.VideoEvent;	import jp.cellfusion.ui.video.IVideoPlayer;	import flash.display.Sprite;	import flash.events.MouseEvent;	/**	 * @author Mk-10:cellfusion	 */	public class VolumeBar implements IVolumeBar	{		private var _player:IVideoPlayer;		private var _thumb:Sprite;		private var _progress:Sprite;		private var _track:Sprite;		public function VolumeBar(player:IVideoPlayer)		{			_player = player;						player.addEventListener(VideoEvent.VOLUME_CHANGED, volumeChanged);		}		private function volumeChanged(event:VideoEvent):void		{			var volume:Number = _player.volume;						if (_progress) {				_progress.scaleX = volume;			}						if (_thumb) {				_thumb.x = _track.width * volume + _track.x;			}		}		public function get thumb():Sprite		{			return _thumb;		}		public function get progress():Sprite		{			return _progress;		}		public function get track():Sprite		{			return _track;		}		public function set thumb(value:Sprite):void		{			if (_thumb) {				_thumb.removeEventListener(MouseEvent.MOUSE_DOWN, thumbDragStrat);			}						value.addEventListener(MouseEvent.MOUSE_DOWN, thumbDragStrat);			_thumb = value;		}		public function set progress(value:Sprite):void		{			_progress = value;		}		public function set track(value:Sprite):void		{			if (_track) {				_track.removeEventListener(MouseEvent.CLICK, trackClick);			}						value.addEventListener(MouseEvent.CLICK, trackClick);			_track = value;		}		private function trackClick(event:MouseEvent):void		{		}		private function thumbDragStrat(event:MouseEvent):void		{		}	}}